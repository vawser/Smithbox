<PARAMMETA XmlVersion="0">
  <Self 
  Wiki="Determines the parameters relating the display of key assignments."/>
  
  <Field>
    <textID
    AltName="Text ID"
    Wiki="If defined, this points to the one-line help text ID. If not, then the category name ID is used instead. If not specified, it is not displayed in the key configuration menu." 
    FmgRef="Modern_Menu_Text" />
    
    <key
    AltName="Key"
    Wiki="The user input key to be assigned. If not specified, it will be treated as a category display item." 
    Enum="CS_UI_KEY" />
  
    <enableUnassign
    AltName="Allow Unassignment"
    Wiki="If ON, then this key can be unassigned."
    IsBool="" />
    
    <enablePadConfig
    AltName="Allow Pad Configuration"
    Wiki="If ON, then this key can be assigned to controller inputs."
    IsBool="" />
    
    <enableMouseConfig
    AltName="Allow Mouse Configuration"
    Wiki="If ON, then this key can be assigned to mouse inputs."
    IsBool="" />
    
     <group
    AltName="Key Group"
    Wiki="The group used for determining duplicate assignments. Keys cannot be duplicated in the same group" 
    Enum="CS_KEY_ASSIGN_GROUP" />
    
    <mappingTextID
    AltName="Mapping Text ID"
    Wiki="The item name to display in the operation list. 0 means it is not displayed." 
    FmgRef="Modern_Menu_Text" />
    
    <viewPad 
    AltName="View Pad" 
    Wiki="Whether to display with key config (pad) (default display)" 
    IsBool="" />
    
    <viewKeyboardMouse 
    AltName="View Keyboard/Mouse" 
    Wiki="Whether to display with key config (mouse / keyboard) (default display)" 
    IsBool="" />
    
    <padding 
    Padding=""/>
  </Field>
  
