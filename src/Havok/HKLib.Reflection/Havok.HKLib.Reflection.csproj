<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>11</LangVersion>
        <Platforms>AnyCPU;x64</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition="$(DefineConstants.Contains(MACOS))">
        <MSBuildDisableGetCopyToPublishDirectoryItemsOptimization>true</MSBuildDisableGetCopyToPublishDirectoryItemsOptimization>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Res\*.*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PublishFolderType>Resource</PublishFolderType>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="System.Text.Json" Version="8.0.5" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\HKLib\Havok.HKLib.csproj" />
    </ItemGroup>
</Project>
