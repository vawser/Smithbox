<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <AssemblyName>Smithbox</AssemblyName>
    <TargetFramework>net9.0-macos</TargetFramework>
    <Authors>Katalash, Vawser</Authors>
    <Version>2.0.8</Version>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <PackageVersion>2.0.6</PackageVersion>
    <AssemblyVersion>2.0.8</AssemblyVersion>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <LangVersion>12</LangVersion>
    <IsPackable>false</IsPackable>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifiers>osx-arm64;osx-x64</RuntimeIdentifiers>
    <DefineConstants>$(DefineConstants);MACOS</DefineConstants>
    <OodlePath>path/to/oodle.dylib</OodlePath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>embedded</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <!-- Required for XCode 16+ builds -->
  <ItemGroup>
    <_CustomLinkFlags Include="-ld64;-undefined;dynamic_lookup" Visible="false" />
  </ItemGroup>
  <PropertyGroup>
    <ValidateXcodeVersion>false</ValidateXcodeVersion>
    <_UseClassicLinker>true</_UseClassicLinker>
  </PropertyGroup>

  <ItemGroup>
    <NativeReference Include="$(VULKAN_SDK)/macOS/lib/libMoltenVK.dylib" Kind="Dynamic" />
    <NativeReference Include="$(OodlePath)" Condition="Exists('$(OodlePath)')" Kind="Dynamic" />
    <NativeReference Include="path/to/libzstd.dylib" Kind="Dynamic" />
    <BundleResource Include="AppIcon.icns" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
    <PackageReference Include="Hexa.NET.ImGui" Version="2.2.7" />
    <PackageReference Include="Hexa.NET.ImGuizmo" Version="2.2.7" />
    <PackageReference Include="Hexa.NET.ImNodes" Version="2.2.7" />
    <PackageReference Include="Hexa.NET.ImPlot" Version="2.2.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Smithbox.Program\Smithbox.Program.csproj" />
    <ProjectReference Include="..\Smithbox.Data\Smithbox.Data.csproj" />
    <ProjectReference Include="..\Veldrid\Veldrid.SDL2\Veldrid.SDL2.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Props Include="&lt;Project&gt;" Visible="false"/>
    <Props Include="  &lt;PropertyGroup&gt;" Visible="false"/>
    <Props Include="    &lt;DefineConstants&gt;%24(DefineConstants)%3BMACOS&lt;/DefineConstants&gt;" Visible="false"/>
    <Props Include="  &lt;/PropertyGroup&gt;" Visible="false"/>
    <Props Include="&lt;/Project&gt;" Visible="false"/>
  </ItemGroup>

  <Target Name="DefineGlobals" BeforeTargets="ResolveProjectReferences">
      <WriteLinesToFile
          File="../Platform.Build.props"
          Lines="@(Props)"
          Overwrite="true"
          Encoding="UTF-8" />
  </Target>
</Project>
